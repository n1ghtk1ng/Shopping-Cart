
<link rel="stylesheet" href="/stylesheets/checkout.css">
<div id="card-errors" class="alert alert-danger {{#if noError}} hidden{{/if}}"><{{errMsg}}/div>
<form action="/checkout" method="post" id="payment-form">
    <div class="form-row">
        <div class="col-xs-12">
            <div class="form-group">
                <label for="card-holder-name">Name</label>
                <input type="text" name="name"id="name" class="form-control" required>
            </div>
        </div>
        <div class="col-xs-12">
            <div class="form-group">
                <label for="card-holder-address">Address</label>
                <input type="text" id="name" class="form-control" name="address" required>
            </div>
        </div>
        <div class="col-xs-12">
            <div class="form-group">
                <label for="card-name">Card Holder Name</label>
                <input type="text" id="name" class="form-control" name="cardname" required>
            </div>
        </div>
        <div class="col-xs-12">
            <div class="form-group">
                <label for="card-element">Credit or debit card</label>
                <div id="card-element" class="form-control">
            <!-- a Stripe Element will be inserted here. -->
                </div>
            </div>
        </div>
        <!-- Used to display form errors -->

    </div>

    <button>Pay {{total}}</button>
</form>

<script src="https://js.stripe.com/v3/"></script>
<script src="/javascripts/checkout.js"></script>